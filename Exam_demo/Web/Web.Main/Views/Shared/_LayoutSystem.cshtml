    <script type="text/javascript">
        var sHour = ""; 	//倒计时的小时
        var sMin = ""; 	//倒计时的分钟
        var sSec = ""; 	//倒计时的秒数
        var iRemain = ""; //开始和结束之间相差的毫秒数
        var SurplusTime = "";

        $(function () {
            //获取URL参数
            //var CaseId = $.getUrlParam("CaseId");
            var TrainExamId = $.getUrlParam("TrainExamId");
            if (parseInt(TrainExamId) > 0) {
                //销售机会/实训考核案例
