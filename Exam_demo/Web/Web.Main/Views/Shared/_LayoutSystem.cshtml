                            content = content.replace(/[ ]/g, "&nbsp;");
                            content = content.replace(/\n/g, "<br/>");
                            $("#M_context #M_text").html(content);
                        }

                    }
                });
            }
            //提交
            $("#btnSubmit").unbind("click").click(function () {
                dialogHelper.Confirm({
                    content: "确认是否提交？",
                    success: function () { 
                        SubmitExam();
                    }
                });
            });

            var ExamTypeId = $("#ExamTypeId").val() * 1;
            //考试倒计时
            if (TrainExamId * 1 > 0) {
                _ajaxhepler({
                    url: "/TrainExam/GetRemainingTime",
                    type: "POST",
                    async: false,
                    dataType: "json",
                    data: {
                        TrainExamId: TrainExamId
                    },
                    success: function (data) {
                        SurplusTime = data;
                    }
                });
                AutoTime();
            }
        });
        //提交考核
        function SubmitExam() {
            //获取URL参数
            var ProposalId = $.getUrlParam("ProposalId");
            //获取URL参数
            var TrainExamId = $.getUrlParam("TrainExamId");
            if (TrainExamId == null) {
                //弹出成功提示
                dialogHelper.Error({
                    content: "提交异常！TrainExamId参数为空，请联系管理员"
                });
                return;
            }
            //计算得分
            _ajaxhepler({
                url: "/TrainExam/CalculateScore",
                type: "POST",
                async: false,
                dataType: "json",
                data: {
                    "TrainExamId": TrainExamId,
                    "ProposalId": ProposalId
                },
                success: function (data) {
                    if (data != null) {
                        //弹出成功提示
                        dialogHelper.Success({
                            content: "提交成功！",
                            success: function () {
                                //location.href = "/CompetitionUser/MatchList/Start";
                            }
                        });
                    }
                }
            });
        }

        //每一秒执行一次时间更新
        function AutoTime() {
            Getdate();
            //如果小于零，清除调用自己，并且返回
            if (iRemain < 0) {
                clearTimeout(setT);
                //1.清空相应缓存和更新考试状态
                SubmitExam();
                return;
            }
            UpdateShow();
            var setT = setTimeout(AutoTime, 1000);

        }

        //更改显示的时间
        function UpdateShow() {
            $("#Timer span").each(function (index, element) {
                if (index == 0) {
                    $(this).text(sHour);
                } else if (index == 1) {
                    $(this).text(sMin);
                } else if (index == 2) {
                    $(this).text(sSec);
                }
            });
        }

        //通用工具函数，在个位数上加零，根据传的N的参数，来设前面加几个零
        function setDig(num, n) {
            var str = "" + num;
            while (str.length < n) {
                str = "0" + str
            }
            return str;
        }

        //获得相差的天，小时，分钟，秒
        function Getdate() {
            iRemain = SurplusTime;
            SurplusTime = SurplusTime - 1;
            //总的秒数除以一天的秒数，再取出整数部分，就得出有多少天。
            //sDate = setDig(parseInt(iRemain / (60 * 60 * 24)), 3);
            var bakiRemain = iRemain;
            //总的秒数除以一天的秒数，然后取其中的余数，就是把整数天扣除之后，剩下的总秒数。
            iRemain %= 60 * 60 * 24;
            
            //剩下的总秒数除以一个小时的秒数，再取整数部分，就是有多少小时。
            sHour = setDig(parseInt(bakiRemain / (60 * 60)), 2)

            //剩下的总秒数除以一个小时的秒数，再取其余数，这个余数，就是扣除小时这后，剩下的总秒数。
            iRemain %= 60 * 60;

            //剩下的总秒数除以一分钟的秒数，再取其整数部分，就是有多少分钟。
            sMin = setDig(parseInt(iRemain / 60), 2)

            //剩下的总秒数除以一分钟的秒数，再取其余数，这个余数，就是扣除分钟之后，剩下的总秒数。
            iRemain %= 60;
            //剩下的秒数
            sSec = setDig(iRemain, 2);
        }
    </script>
