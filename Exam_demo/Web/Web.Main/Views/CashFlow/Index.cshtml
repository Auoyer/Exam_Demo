@using System.Text;
@using VM;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/CompetitionUser/Views/Shared/_LayoutSystem.cshtml";
    
}
<script src="~/Content/js/Training/CashFlow.js"></script>

<input type="hidden" value="0" id="Id" />
<div id="CashFlow" class="con-right FinancePlan">
    <div class="tab-title">
        <ul>
            <li><a href="javascript:SaveJudgeTag('CashFlow','Liability')"><b class="ico ims-icon3" field="Liability"></b><strong>资产负债表</strong></a></li>
            <li><a href="javascript:SaveJudgeTag('CashFlow','IncomeandExpenses')" field="IncomeandExpenses"><b class="ico ims-icon4"></b><strong>收支储蓄表</strong></a></li>
            <li><a class="active" href="javascript:SaveJudgeTag('CashFlow','CashFlow')" field="CashFlow"><b class="ico ims-icon5"></b><strong>现金流量表</strong></a></li>
            <li><a href="javascript:SaveJudgeTag('CashFlow','FinancialRatios')" field="FinancialRatios"><b class="ico ims-icon6"></b><strong>财务比率分析</strong></a></li>
        </ul>
    </div>
    <div class="main-hd">
        <input class="btn btn-small btn-blue fr ml10" type="button" id="btnNext" value="下一步">
        <input class="btn btn-small btn-blue fr ml10" type="button" id="btnSave" value="保 存">
        <input class="btn btn-small btn-blue fr" id="btnPrev" type="button" value="上一步">
    </div>
    <div class="main-bd pad10">
        <div class="explain">
            <strong>现金流量表</strong>
            <p>输入现金流量状况，以确保一个完整的家庭<span class="c-red">年度</span>现金流量表</p>
        </div>
        <div class="clearfix">
            <div class="table">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <thead>
                        <tr>
                            <th colspan="2">现金流量</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td align="center">项 目</td>
                            <td align="center">金额：元</td>
                        </tr>
                        <tr>
                            <td colspan="2"><strong>一、生活现金流量</strong></td>
                        </tr>
                        <tr>
                            <td><i class="c-red">*</i>工作收入</td>
                            <td class="b-grayish last" align="center"><input type="text" class="ipt-text grid-11 IsRequired IsMaxFloat IsMinFloat IsReg" id="WorkIncome" msgreg="请输入0.00到999999999.99保留两位小数的数字" msgname="工作收入" maxfloat="999999999.99" minfloat="0.00" reg="\d{0,9}\.?\d{0,2}" /></td>

                        </tr>
                        <tr>
                            <td><i class="c-red">*</i>生活支出</td>
                            <td class="b-grayish last" align="center"><input type="text" class="ipt-text grid-11 IsRequired IsMaxFloat IsMinFloat IsReg" id="LiveExpense" msgreg="请输入0.00到999999999.99保留两位小数的数字" msgname="生活支出" maxfloat="999999999.99" minfloat="0.00" reg="\d{0,9}\.?\d{0,2}" /></td>

                        </tr>
                        <tr>
                            <td>生活现金流量净额</td>
                            <td class="b-grayish last" align="center"><input type="text" id="lifeMoney" disabled class="ipt-text grid-11 disabled" /></td>
                        </tr>

                        <tr>
                            <td colspan="2"><strong>二、投资现金流量</strong></td>
                        </tr>
                        <tr>
                            <td><i class="c-red">*</i>投资收益</td>
                            <td class="b-grayish last" align="center"><input type="text" class="ipt-text grid-11 IsRequired IsMaxFloat IsMinFloat IsReg" id="InvestIncome" msgreg="请输入0.00到9999999999.99保留两位小数的数字" msgname="投资收益" maxfloat="999999999.99" minfloat="0.00" reg="\d{0,10}\.?\d{0,2}" /></td>
                        </tr>
                        <tr>
                            <td><i class="c-red">*</i>投资赎回（实际发生）</td>
                            <td class="b-grayish last" align="center"><input type="text" class="ipt-text grid-11 IsRequired IsMaxFloat IsMinFloat IsReg" id="Redemption" msgreg="请输入0.00到9999999999.99保留两位小数的数字" msgname="投资赎回" maxfloat="999999999.99" minfloat="0.00" reg="\d{0,10}\.?\d{0,2}" /></td>
                        </tr>
                        <tr>
                            <td><i class="c-red">*</i>新增投资（实际发生）</td>
                            <td class="b-grayish last" align="center"><input type="text" class="ipt-text grid-11 IsRequired IsMaxFloat IsMinFloat IsReg" id="Investment" msgreg="请输入0.00到9999999999.99的数字" msgname="新增投资" maxfloat="999999999.99" minfloat="0.00" reg="\d{0,9}\.*\d{0,10}" /></td>
                        </tr>
                        <tr>
                            <td>投资现金流量净额</td>
                            <td class="b-grayish last" align="center"><input type="text" id="investMoney" disabled class="ipt-text grid-11 disabled" /></td>
                        </tr>

                        <tr>
                            <td colspan="2"><strong>三、借贷现金流量</strong></td>
                        </tr>
                        <tr>
                            <td><i class="c-red">*</i>借入本金</td>
                            <td class="b-grayish last" align="center"><input type="text" class="ipt-text grid-11 IsRequired IsMaxFloat IsMinFloat IsReg" id="BorrowCapital" msgreg="请输入0.00到999999999.99保留两位小数的数字" msgname="借入本金" maxfloat="999999999.99" minfloat="0.00" reg="\d{0,9}\.*\d{0,2}" /></td>
                        </tr>
                        <tr>
                            <td><i class="c-red">*</i>利息支出</td>
                            <td class="b-grayish last" align="center"><input type="text" class="ipt-text grid-11 IsRequired IsMaxFloat IsMinFloat IsReg" id="InterestExpense" msgreg="请输入0.00到999999999.99保留两位小数的数字" msgname="利息支出" maxfloat="999999999.99" minfloat="0.00" reg="\d{0,9}\.*\d{0,2}" /></td>
                        </tr>
                        <tr>
                            <td><i class="c-red">*</i>还款本金</td>
                            <td class="b-grayish last" align="center"><input type="text" class="ipt-text grid-11 IsRequired IsMaxFloat IsMinFloat IsReg" id="RepaymentCapital" msgreg="请输入0.00到999999999.99保留两位小数的数字" msgname="还款本金" maxfloat="999999999.99" minfloat="0.00" reg="\d{0,9}\.*\d{0,2}" /></td>
                        </tr>
                        <tr>
                            <td>借贷现金流量净额</td>
                            <td class="b-grayish last" align="center"><input type="text" id="borrowMoney" disabled class="ipt-text grid-11 disabled" /></td>
                        </tr>

                        <tr>
                            <td colspan="2"><strong>四、保障现金流量</strong></td>
                        </tr>
                        <tr>
                            <td><i class="c-red">*</i>保费支出</td>
                            <td class="b-grayish last" align="center"><input type="text" class="ipt-text grid-11 IsRequired IsMaxFloat IsMinFloat IsReg" id="InsuranceExpense" msgreg="请输入0.00到999999999.99保留两位小数的数字" msgname="保费支出" maxfloat="999999999.99" minfloat="0.00" reg="\d{0,9}\.*\d{0,2}" /></td>
                        </tr>
                        <tr>
                            <td>保障现金流量净额</td>
                            <td class="b-grayish last" align="center"><input type="text" disabled class="ipt-text grid-11 disabled" id="InsuranceExpenses2" width="150px" msgname="保障现金流量净额" /></td>
                        </tr>
                        <tr>
                            <td>本期现金及现金等价物净增加额</td>
                            <td class="b-grayish last" align="center"><input type="text" id="Money" disabled class="ipt-text grid-11 disabled" /></td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
